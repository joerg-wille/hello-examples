<system xmlns="http://schema.paremus.com/sf/1.2" version="1.0.0" name="hello" boundary="fibre" repopath="">
    <description>
        A multiple remote Greeting service and viewer - Declarative Services Version.
    </description>
    <admin group="demo"/>
    
    <!--  Declarative Services Greeting service  -->
    <system.part name="hello-app">
        
        <contract features="(AppLayer=true)"/>

        <replication.handler name="scale" type="scalable">
             <property name="scaleFactor" value="1" type="float" />
             <property name="minimum" value="1" type="integer" />
          </replication.handler>
      
    </system.part>
    
    <!-- Remote Web viewer -->
    <system.part name="hello-web">

        <contract features="(WebLayer=true)"/>

    </system.part>
</system>

